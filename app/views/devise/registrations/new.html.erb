<section class="section">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <div class="card card-primary">
          <div class="card-header"><h4>Sign Up</h4></div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-group">
                <label for="email">Name</label>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', tabindex:'1', required: true %>
                
                <div class="invalid-feedback">
                  Please fill in your name
                </div>
              </div>

              <div class="form-group">
                <label for="email">Email</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', tabindex:'1', required: true %>
                
                <div class="invalid-feedback">
                  Please fill in your email
                </div>
              </div>

              <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', tabindex:"2", required: true %>
                <div class="invalid-feedback">
                  please fill in your password
                </div>
              </div>

              <div class="form-group">
                <label for="password_confirmation" class="control-label">Password Confirmation</label>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', tabindex:"2", required: true %>
                <div class="invalid-feedback">
                  please fill in your password
                </div>
              </div>

              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                  Sign Up
                </button>
              </div>
            <% end %>
          </div>
        </div>
        <%= render "devise/shared/links" %> 
        <div class="simple-footer">
          <a href="http://syafiqfaiz.com" target="_blank">Syafiq Faiz</a>
        </div>
      </div>
    </div>
  </div>
</section>