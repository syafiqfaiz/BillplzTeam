<section class="section">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <div class="card card-primary">
          <div class="card-header"><h4>Forgot your password?</h4></div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-group">
                <label for="email">New password</label>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', tabindex:'1', required: true %>
                
                <div class="invalid-feedback">
                  Please fill in your new password
                </div>
              </div>

              <div class="form-group">
                <label for="email">Confirm password</label>
                <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'form-control', tabindex:'1', required: true %>
                
                <div class="invalid-feedback">
                  Please fill in your new password
                </div>
              </div>

              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                  Change my password"
                </button>
              </div>
            <% end %>
          </div>
        </div>
        <%= render "devise/shared/links" %> 
        <div class="simple-footer">
          <a href="http://syafiqfaiz.com" target="_blank">Syafiq Faiz</a>
        </div>
      </div>
    </div>
  </div>
</section>
