<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1>Collection</h1>
    </div>
    <div class="row">
      <div class="col-12 col-md-10">
        <div class="card">
          <div class="card-header">
            <h4><%= @collection.title.capitalize %> <small>Created at : <%= @collection.created_at.strftime('%d/%m/%Y') %>, by <%= @collection.user.name.capitalize %></small></h4>
          </div>
          <div class="card-body">

            <div class="table-responsive">
              <table class="table table-hover ">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Date</th>
                    <th scope="col">Status</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% @collection.payments.each_with_index do |bill, index| %>
                    <tr>
                      <th scope="row"><%= index + 1 %></th>
                      <td><%= bill.name.capitalize %></td>
                      <td><%= bill.amount_paid %></td>
                      <td><%= bill.paid_at.strftime('%d/%m/%Y') %></td>
                      <td><%= bill.payment_status %></td>
                      <td>
                        <%= link_to("View", manage_collection_path(@collection)) %>
                      </td>
                    </tr>
                  <%end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>